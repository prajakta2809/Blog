<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepages</title>
</head>
<body>
    <%- include('./partials/nav') %>
   <div class="container mt-4 row row-cols-3">
     <% blogs.forEach(blog => { %>
      <div class="col">
        <div class="card col" style="width: 9rem">
            <img src="<%=blog.coverImageURL %>" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              
              <a href="/blog/<%= blog._id %>" class="btn btn-primary">view</a>
            </div>
          </div>
        </div>
      
     <% }) %>
   </div>
    <%- include('./partials/scripts') %>
</body>
</html>